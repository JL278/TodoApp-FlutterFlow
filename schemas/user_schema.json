{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User",
  "description": "Schema for user documents in the Firestore users collection",
  "type": "object",
  "properties": {
    "uid": {
      "description": "Unique identifier for the user (Firebase Auth UID)",
      "type": "string"
    },
    "email": {
      "description": "User email address",
      "type": "string",
      "format": "email"
    },
    "display_name": {
      "description": "User display name",
      "type": "string"
    },
    "photo_url": {
      "description": "Profile photo URL",
      "type": "string",
      "format": "uri"
    },
    "birthdate": {
      "description": "User birthdate",
      "type": "string",
      "format": "date-time"
    },
    "created_time": {
      "description": "Timestamp when the user account was created",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["uid", "email", "created_time"]
}
